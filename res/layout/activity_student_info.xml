<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_22" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_2"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/label_gender"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginStart="@dimen/dp_5"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/label_phone"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="phone"
                        android:textColorLink="@color/btn_press"
                        android:textSize="@dimen/sp_15" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/label_grade"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_grade"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginStart="@dimen/dp_5"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/label_birthday"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_birth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginStart="@dimen/dp_5"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingStart="@dimen/dp_15" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/label_address1"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/gray_light"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/dp_0"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_0"
                    android:paddingStart="@dimen/dp_15"
                    android:text="@string/label_available_time"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/sp_14" />

                <com.mssky.mobile.ui.view.CustomListView
                    android:id="@+id/lv_timeslot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:divider="@null"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_timeslot_tip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/dp_0"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_0"
                    android:paddingStart="@dimen/dp_15"
                    android:text="@string/label_none"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/gray_light"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/dp_0"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_0"
                    android:paddingStart="@dimen/dp_15"
                    android:text="@string/label_interested_couress"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/sp_14" />

                <com.mssky.mobile.ui.view.CustomListView
                    android:id="@+id/lv_coures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:divider="@null"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_course_tip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/dp_0"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_0"
                    android:paddingStart="@dimen/dp_15"
                    android:text="@string/label_none"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_chat_with_tutor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/selector_blue_btn"
                    android:gravity="center"
                    android:text="@string/label_chat_with_student"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_20" />

                <Button
                    android:id="@+id/btn_to_be_my_tutor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/selector_yellow_btn"
                    android:gravity="center"
                    android:text="@string/label_to_be_my_student"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_20" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>