<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/student_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_bg"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_8"
    android:paddingEnd="@dimen/dp_0"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_0"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_8" >

    <ImageView
        android:id="@id/student_list_item_avatar"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_gravity="end"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@id/student_list_item_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_22" />

                <TextView
                    android:id="@id/student_list_item_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:singleLine="true"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_3"
                android:layout_weight="0"
                android:orientation="vertical" >

                <TextView
                    android:id="@id/student_list_item_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@id/student_list_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:textColor="@color/black_line"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@color/gray_line" />
    </FrameLayout>

</LinearLayout>