<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <com.tutor.ui.view.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_15" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="0.65"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="@dimen/dp_2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/label_teaching_content"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/sp_14" />

                    <RatingBar
                        android:id="@+id/rate_teaching_content"
                        style="@style/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:numStars="5"
                        android:rating="0"
                        android:stepSize="1" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="@dimen/dp_2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_attitude_and_patience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/label_attitude_and_patience"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/sp_14" />

                    <RatingBar
                        android:id="@+id/rate_attitude_and_patience"
                        style="@style/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:numStars="5"
                        android:rating="0"
                        android:stepSize="1" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="@dimen/dp_2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_punctuality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/label_punctuality"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/sp_14" />

                    <RatingBar
                        android:id="@+id/rate_punctuality"
                        style="@style/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:numStars="5"
                        android:rating="0"
                        android:stepSize="1" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="@dimen/dp_2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_communication_skill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/label_communication_skill"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/sp_14" />

                    <RatingBar
                        android:id="@+id/rate_communication_skill"
                        style="@style/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:numStars="5"
                        android:rating="0"
                        android:stepSize="1" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:text="@string/label_your_comments"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/editview_bg"
                    android:gravity="top"
                    android:hint="@string/label_please_input_your_comments_here"
                    android:minHeight="@dimen/dp_100"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/sp_14" />

                <Button
                    android:id="@+id/btn_other_comments"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@drawable/selector_blue_btn"
                    android:gravity="center"
                    android:text="@string/label_see_other_comments"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_20" />
            </LinearLayout>
        </LinearLayout>
    </com.tutor.ui.view.OverScrollView>

</LinearLayout>