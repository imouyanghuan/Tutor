<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_50" >

    <LinearLayout
        android:id="@id/menu_item_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_bg_selector"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_10" >

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:contentDescription="@string/app_name"
            android:src="@drawable/menu_icon_notification" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:text="@string/notification"
            android:textColor="@color/menu_txt_color"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/menu_item_bookmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_bg_selector"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_10" >

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:contentDescription="@string/app_name"
            android:src="@drawable/menu_icon_bookmark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:text="@string/bookmark"
            android:textColor="@color/menu_txt_color"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_item_chatlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_bg_selector"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_10" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/transparent"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/menu_icon_chat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="@string/chatlist"
                    android:textColor="@color/menu_txt_color"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <TextView
                android:id="@id/menu_item_tv_msgCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@drawable/menu_msg_count_bg"
                android:gravity="center"
                android:padding="@dimen/dp_2"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                android:visibility="visible" />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>