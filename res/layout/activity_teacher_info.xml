<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <com.tutor.ui.view.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/avatar" />

                    <Button
                        android:id="@+id/btn_rate_tutor"
                        android:layout_width="125dp"
                        android:layout_height="@dimen/dp_35"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/selector_rate_tutor"
                        android:drawableLeft="@drawable/selrctor_pen"
                        android:drawableStart="@drawable/selrctor_pen"
                        android:enabled="false"
                        android:gravity="center"
                        android:paddingEnd="@dimen/dp_0"
                        android:paddingLeft="@dimen/dp_18"
                        android:paddingRight="@dimen/dp_0"
                        android:paddingStart="@dimen/dp_18"
                        android:text="@string/label_rete_tutor"
                        android:textColor="@color/rate_txt_color_selector"
                        android:textSize="@dimen/sp_16" />

                    <Button
                        android:id="@+id/btn_play_video"
                        android:layout_width="125dp"
                        android:layout_height="@dimen/dp_35"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/team_btn_forward_bg"
                        android:drawableLeft="@drawable/play_s_selector"
                        android:drawableStart="@drawable/play_s_selector"
                        android:enabled="false"
                        android:gravity="center"
                        android:paddingEnd="@dimen/dp_0"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_0"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/label_paly_video"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_20" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_2"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/label_gender"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_marginStart="@dimen/dp_3"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/label_major"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_major"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_marginStart="@dimen/dp_3"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_education"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_2"
                            android:layout_marginTop="@dimen/dp_2"
                            android:text="@string/label_education_background2"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/sp_15"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_education"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_2"
                            android:layout_marginTop="@dimen/dp_2"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:orientation="vertical"
                        android:visibility="visible" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:text="@string/label_graduate_school"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_graduate_school"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_education_status"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_current_education_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/label_student"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_student_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/dp_2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/rating"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/sp_15" />

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="@style/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_marginStart="@dimen/dp_3"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="0"
                            android:stepSize="1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingStart="@dimen/dp_15"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/label_phone"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:autoLink="phone"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorLink="@color/btn_press"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingStart="@dimen/dp_15"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/label_address1"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/gray_light"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/dp_0"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_0"
                    android:paddingStart="@dimen/dp_15"
                    android:text="@string/label_available_time"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/sp_14" />

                <com.mssky.mobile.ui.view.CustomListView
                    android:id="@+id/lv_timeslot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:divider="@null"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:listSelector="@color/transparent"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_timeslot_tip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/dp_0"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_0"
                    android:paddingStart="@dimen/dp_15"
                    android:text="@string/label_none"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/gray_light"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/dp_0"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_0"
                    android:paddingStart="@dimen/dp_15"
                    android:text="@string/label_teaching_couress"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/sp_14" />

                <com.mssky.mobile.ui.view.CustomListView
                    android:id="@+id/lv_coures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:divider="@null"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_course_tip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/dp_0"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_0"
                    android:paddingStart="@dimen/dp_15"
                    android:text="@string/label_none"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/gray_light"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/dp_0"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_0"
                    android:paddingStart="@dimen/dp_15"
                    android:text="@string/label_self_introduction1"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_self_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/dp_0"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_0"
                    android:paddingStart="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

                <Button
                    android:id="@+id/btn_chat_with_tutor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/selector_blue_btn"
                    android:gravity="center"
                    android:text="@string/label_chat_with_tutor"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_20" />

                <Button
                    android:id="@+id/btn_to_be_my_tutor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/selector_yellow_btn"
                    android:gravity="center"
                    android:text="@string/label_to_be_my_tutor"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_20" />
            </LinearLayout>
        </LinearLayout>
    </com.tutor.ui.view.OverScrollView>

</LinearLayout>