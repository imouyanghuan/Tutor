<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:text="@string/label_student_name"
                android:textColor="@color/gray_text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/selector_edittext_border"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:text="Abby Chan" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:text="@string/label_subject_to_be_taught"
                android:textColor="@color/gray_text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/selector_edittext_border"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:text="ESE English" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:text="@string/label_frequency_of_lessons"
                android:textColor="@color/gray_text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/selector_edittext_border"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:text="Twice a Weak" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:text="@string/label_price_per_hour"
                android:textColor="@color/gray_text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/selector_edittext_border"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:text="200 HK Dollars" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:text="@string/label_service_location"
                android:textColor="@color/gray_text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/selector_edittext_border"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:text="Central,Hong Kong" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>