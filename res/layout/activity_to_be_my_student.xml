<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_20" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_0"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_0"
                android:paddingStart="@dimen/dp_15"
                android:text="@string/label_student_name"
                android:textColor="@color/gray_text" />

            <EditText
                android:id="@+id/et_nick"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/editview_bg"
                android:gravity="center_vertical"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_0"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_0"
                android:paddingStart="@dimen/dp_15"
                android:text="@string/label_subject_to_be_taught"
                android:textColor="@color/gray_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/et_course"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_0"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_0"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/editview_bg"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_2"
                    android:text="@string/nust_flag"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_0"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_0"
                android:paddingStart="@dimen/dp_15"
                android:text="@string/label_frequency_of_lessons"
                android:textColor="@color/gray_text" />

            <EditText
                android:id="@+id/et_frequency"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/editview_bg"
                android:gravity="center_vertical"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_0"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_0"
                android:paddingStart="@dimen/dp_15"
                android:text="@string/label_price_per_hour"
                android:textColor="@color/gray_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_price"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45"
                    android:layout_weight="2"
                    android:background="@drawable/editview_bg"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginStart="@dimen/dp_2"
                    android:text="@string/nust_flag"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_16" />

                <Spinner
                    android:id="@+id/spinner_priceType"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginStart="@dimen/dp_2"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_0"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_0"
                android:paddingStart="@dimen/dp_15"
                android:text="@string/label_service_location"
                android:textColor="@color/gray_text" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/editview_bg"
                android:gravity="center_vertical"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>