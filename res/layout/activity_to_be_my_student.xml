<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <com.tutor.ui.view.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_20" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_0"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_0"
                android:paddingStart="@dimen/dp_15"
                android:text="@string/label_student_name"
                android:textColor="@color/gray_text"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <EditText
                    android:id="@+id/et_nick"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:background="@drawable/editview_bg"
                    android:enabled="false"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_2"
                    android:text="@string/nust_flag"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_16"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_0"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_0"
                android:paddingStart="@dimen/dp_15"
                android:text="@string/label_hkid_number"
                android:textColor="@color/gray_text"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_hk_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <EditText
                    android:id="@id/ac_fill_personal_info_et_hkid"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:background="@drawable/editview_bg"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/ac_fill_personal_tv_hkid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_2"
                    android:text="@string/nust_flag"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_0"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_0"
                android:paddingStart="@dimen/dp_15"
                android:text="@string/label_phone"
                android:textColor="@color/gray_text" />

            <LinearLayout
                android:id="@+id/ll_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible" >

                <EditText
                    android:id="@id/ac_fill_personal_info_et_phone"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:background="@drawable/editview_bg"
                    android:ems="13"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:singleLine="true"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_2"
                    android:text="@string/nust_flag"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_0"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_0"
                android:paddingStart="@dimen/dp_15"
                android:text="@string/label_address"
                android:textColor="@color/gray_text"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <EditText
                    android:id="@id/ac_fill_personal_info_et_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/editview_bg"
                    android:gravity="top"
                    android:hint="@string/hint_enter_address"
                    android:inputType="text"
                    android:minHeight="@dimen/dp_100"
                    android:singleLine="true"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="15dp"
                    android:layout_marginStart="@dimen/dp_2"
                    android:text="@string/nust_flag"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_0"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_0"
                android:paddingStart="@dimen/dp_15"
                android:text="@string/label_subject_to_be_taught"
                android:textColor="@color/gray_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/et_course"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_0"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_0"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/editview_bg"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_2"
                    android:text="@string/nust_flag"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_0"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_0"
                android:paddingStart="@dimen/dp_15"
                android:text="@string/label_teach_time_slot"
                android:textColor="@color/gray_text" />

            <com.mssky.mobile.ui.view.CustomListView
                android:id="@id/ac_fill_personal_info_timeslot_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_3"
                android:divider="@null"
                android:listSelector="@color/transparent" >
            </com.mssky.mobile.ui.view.CustomListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal" >

                <TextView
                    android:id="@id/ac_fill_personal_time_tv_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_timeslot_txt_bg"
                    android:gravity="center"
                    android:hint="@string/label_week"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@id/ac_fill_personal_time_tv_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/add_timeslot_txt_bg"
                    android:gravity="center"
                    android:hint="@string/label_start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@id/ac_fill_personal_time_tv_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/add_timeslot_txt_bg"
                    android:gravity="center"
                    android:hint="@string/label_end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_13" />

                <Button
                    android:id="@id/ac_fill_personal_info_btn_save_timeslot"
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_26"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="0"
                    android:background="@drawable/add_timeslot_btn_bg"
                    android:enabled="false"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_0"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_0"
                android:paddingStart="@dimen/dp_15"
                android:text="@string/label_frequency_of_lessons"
                android:textColor="@color/gray_text"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_frequency"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/editview_bg"
                android:gravity="center_vertical"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="@dimen/sp_16"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_0"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_0"
                android:paddingStart="@dimen/dp_15"
                android:text="@string/label_price_per_hour"
                android:textColor="@color/gray_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_price"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45"
                    android:layout_weight="2"
                    android:background="@drawable/editview_bg"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginStart="@dimen/dp_2"
                    android:text="@string/nust_flag"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_16" />

                <Spinner
                    android:id="@+id/spinner_priceType"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginStart="@dimen/dp_2"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:background="@color/gray_light"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_0"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_0"
                android:paddingStart="@dimen/dp_15"
                android:text="@string/label_service_location"
                android:textColor="@color/gray_text" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/editview_bg"
                android:gravity="center_vertical"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/note"
                android:textColor="@color/black1"
                android:textSize="@dimen/sp_14" android:visibility="gone"/>
        </LinearLayout>
    </com.tutor.ui.view.OverScrollView>

</LinearLayout>