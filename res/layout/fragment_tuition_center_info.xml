<?xml version="1.0" encoding="utf-8"?>
<com.tutor.ui.view.OverScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_15" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@id/fragment_my_iv_avatar"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_120"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@id/fragment_my_tv_changepswd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/tv_bg"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/change_pswd"
                    android:textColor="@color/blue_color_selector"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_5" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_name"
                    android:textSize="@dimen/sp_16"
                    android:visibility="gone" />

                <TextView
                    android:id="@id/fragment_my_tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:singleLine="true"
                    android:text="@string/label_nickname"
                    android:textSize="@dimen/sp_16"
                    android:visibility="gone" />

                <EditText
                    android:id="@id/fragment_my_et_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/editview_bg"
                    android:hint="@string/hint_enter_nickname"
                    android:inputType="text"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_gender"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@id/fragment_my_tv_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_male"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_registration_time"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@id/fragment_my_tv_registration_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/editview_bg"
                android:singleLine="true"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_email"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:background="@drawable/editview_bg"
                android:ems="20"
                android:inputType="textWebEmailAddress"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/black1"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_phone_number"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:background="@drawable/editview_bg"
                android:ems="20"
                android:inputType="phone"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/black1"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <TextView
            android:id="@id/fragment_my_tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_30"
            android:padding="@dimen/dp_10"
            android:text="@string/edit_personal_info"
            android:textColor="@color/blue_color_selector"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:id="@+id/ll_tuition_school_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/label_address1"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_tuition_school_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editview_bg"
                android:gravity="top"
                android:hint="@string/hint_enter_tuition_center_address"
                android:inputType="text"
                android:minHeight="@dimen/dp_100"
                android:singleLine="true"
                android:textColor="@color/black1"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <!-- 介绍 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/label_tuition_center_introduction"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@id/fragment_my_et_introduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/editview_bg"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/hint_enter_introduction"
            android:inputType="text"
            android:minHeight="@dimen/dp_120"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@id/fragment_my_btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/btn_bg_selector"
            android:text="@string/btn_save"
            android:textColor="@color/white" />
    </LinearLayout>

</com.tutor.ui.view.OverScrollView>